@model IEnumerable<Vaccine>
@{
    ViewData["Title"] = "Vaccine";
}

<h1>Vaccine Management</h1>
<hr />
<a class="btn btn-success" style="margin-bottom: 10px;" asp-controller="Vaccine" asp-action="Create">Create</a>
<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Stock)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Stock
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    <a class="btn btn-info" asp-controller="Vaccine" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-primary" asp-controller="Vaccine" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                    <a class="btn btn-danger" asp-controller="Vaccine" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>